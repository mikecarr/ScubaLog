<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:DataType="viewModels:DiveComputerImportViewModel"
        xmlns:viewModels="clr-namespace:ScubaLog.ViewModels"
        x:Class="ScubaLog.Views.DiveComputerImportWindow"
        Width="520"
        Height="220"
        Title="Import from Dive Computer"
        CanResize="False">

  <Grid Margin="12" RowDefinitions="Auto,Auto,Auto,Auto">
    <TextBlock Text="Select your dive computer and scope, then click Import."
               Margin="0,0,0,8" />

    <Grid Grid.Row="1"
          ColumnDefinitions="*,*"
          ColumnSpacing="8"
          Margin="0,0,0,8">
      <StackPanel>
        <TextBlock Text="Manufacturer" />
      <ComboBox ItemsSource="{Binding Manufacturers}"
                SelectedItem="{Binding SelectedManufacturer}"
                MinWidth="180" />
      </StackPanel>
      <StackPanel Grid.Column="1">
        <TextBlock Text="Model" />
      <ComboBox ItemsSource="{Binding Models}"
                SelectedItem="{Binding SelectedModel}"
                MinWidth="180" />
      </StackPanel>
    </Grid>

    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" Margin="0,0,0,8">
      <TextBlock Text="Import scope:" VerticalAlignment="Center" />
      <ComboBox ItemsSource="{Binding Scopes}"
                SelectedItem="{Binding SelectedScope}"
                MinWidth="200" />
    </StackPanel>

    <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="8">
      <Button Content="Cancel" Click="OnCancel" />
      <Button Content="Import" Click="OnImport" />
    </StackPanel>
  </Grid>
</Window>
